#include <iostream>
using namespace std;
int main()
{
  int PR,dis,Np;
  cout<<"Enter product rate";
  cin>>PR;
  if(PR>=2000)
  dis=(PR*20)/100;
  else
  dis=(PR*10)/100;
  Np=PR-dis;
  cout<<dis,Np;
}

